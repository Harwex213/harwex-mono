{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ES2019",
      "ES2020.Promise",
      "ES2020.BigInt",
      "ES2020.String"
    ],
    "target": "ES2019",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noEmit": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true
  }
}